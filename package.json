{
  "name": "spotifood",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/jesse1983/sf-frontend",
    "type": "git"
  },
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "check-docs": "node check-docs.js",
    "dev": "next",
    "export": "next export && rm -rf docs && mkdir docs && cp -a out/* docs && touch docs/_next/.nojekyll",
    "start": "next start",
    "surge": "surge --project $(pwd)/docs --domain ifood-frontend-test.surge.sh",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@zeit/next-sass": "^1.0.1",
    "next": "^7.0.2",
    "node-sass": "^4.10.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "react-test-renderer": "^16.6.3",
    "surge": "^0.20.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test && npm run check-docs && rm -rf out"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/docs/",
      "/.next/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
