$primary = #5a4ded

label
  display flex
  flex-direction column

select
  padding 5px 20px
  border-radius 4px
  outline none
  background white

span
  text-align center

.the-aside
  display grid
  grid-template-columns 1fr
  grid-template-rows 2fr 2fr 1fr
  grid-template-areas 'username' 'filters' 'logout'

  &__username
    text-align center
    display flex
    justify-content center
    margin-bottom 2em
    align-items flex-end
    flex-wrap wrap
    grid-area username

  @media (max-width: 700px)
    display grid
    grid-template-columns 2fr 1fr
    grid-template-rows 1fr 2fr
    grid-template-areas 'username logout' 'filters filters'

    &__username
      text-align center
      margin-bottom 0
      display flex
      justify-content center
      align-items center
      flex-wrap wrap
      grid-area username

  &__filters
    grid-area filters
    display flex
    flex-direction column
    align-items center

    @media (max-width: 700px)
      flex-direction row
      justify-content space-around
      align-items center
      margin-bottom 5px

      span
        font-size 14px

.btn-sair
  grid-area logout
  padding 10px 40px
  margin 20px 20px
  background white
  border none
  text-transform uppercase
  font-weight bold
  color $primary
  border-radius 4px
  font-size 16px
  max-height 60px

  &:hover
    background $primary
    color white
    border 1px white solid

  @media (max-width: 700px)
    padding 10px