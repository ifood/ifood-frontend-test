.icon-clear
  width 40px
  height 10px
  background white
  position absolute
  display inline-block
  top 4vh
  right 0
  margin 0 40px
  transform rotate(45deg)
  border-radius 10%
  cursor pointer

  &::before
    content ''
    position relative
    display inline-block
    background white
    width 40px
    height 10px
    bottom 100%
    transform rotate(85deg)

  &:hover
    transform scale(1.3) rotate(145deg)
    transition all 0.4s
    background gold

    &::before
      background gold

  @media (max-width: 700px)
    width 20px
    height 5px

    &::before
      width 20px
      height 5px
      bottom 15px